.container {
    padding: 30rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
}

.reminder-form {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    text-align: center;
}

.activity-info {
    background-color: #f8f8f8;
    padding: 20rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.activity-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
}

.activity-time,
.activity-location {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}

.form-item {
    margin-bottom: 30rpx;
}

.form-label {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 16rpx;
}

.reminder-type-group {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.reminder-type-item {
    display: flex;
    align-items: center;
    gap: 10rpx;
    padding: 10rpx;
}

.reminder-type-item text {
    font-size: 28rpx;
    color: #333;
}

.time-picker-group {
    display: flex;
    gap: 20rpx;
}

.picker {
    background-color: #f8f8f8;
    padding: 20rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #333;
    flex: 1;
}

.custom-title-input {
    background-color: #f8f8f8;
    padding: 20rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    width: 100%;
    box-sizing: border-box;
}

.submit-btn {
    margin-top: 40rpx;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    border-radius: 44rpx;
}

/* 选中状态的单选按钮样式 */
radio .wx-radio-input.wx-radio-input-checked {
    background-color: #07c160 !important;
    border-color: #07c160 !important;
} 